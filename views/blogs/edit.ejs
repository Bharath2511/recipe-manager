<% include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Recipe</div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" value="<%= blog.title %>" name="blog[title]">
        </div>
        <div class="field">
            <label>Post Content</label>
           <label>Name:<textarea name="blog[name]"><%= blog.name %></textarea></label><br>
           <label>Description:<textarea name="blog[description]"><%= blog.description %></textarea></label><br>
          <label>Ingredients:<textarea name="blog[ingredients]"><%= blog.ingredients %></textarea></label><br>
           <label>Procedure:<textarea name="blog[procedure]"><%= blog.procedure %></textarea></label><br>
          <label>Additional Tips<textarea name="blog[additionalTips]"><%= blog.additionalTips %></textarea></label><br>
        </div>
        <button class="ui big violet basic button">Update Post</button>
    </form>
</div>
<% include ../partials/footer %>